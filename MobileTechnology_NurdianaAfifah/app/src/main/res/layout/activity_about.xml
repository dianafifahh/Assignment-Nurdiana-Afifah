<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".AboutActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAbout"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:titleTextColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/topButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/toolbarAbout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnHomeAbout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Home"/>

                <Button
                    android:id="@+id/btnAboutPage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topButtons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                        <ImageView
                            android:id="@+id/appIcon"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@mipmap/ic_launcher"
                            android:background="@drawable/circle_background"
                            android:layout_marginBottom="24dp"/>

                        <TextView
                            android:id="@+id/authorInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author: Nurdiana Afifah binti Zuraidi\nMatric No: 2023269018\nCourse: Information System Engineering"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="16dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/copyrightNotice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â© 2025 Nurdiana Afifah Zuraidi. All rights reserved."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="24dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/githubLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background"
                            android:padding="12dp"
                            android:text="View GitHub Repository"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
